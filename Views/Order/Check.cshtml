@model Order
@{
    ViewData["Title"] = Model.Name;
}

<h1 class="text-center">Order Details</h1>

<div class="card">
    <div class="card-header">
        <h4>Shipping Address</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Order ID</dt>
            <dd class="col-sm-9">@Model.OrderID</dd>

            <dt class="col-sm-3">Order Status</dt>
            @if (Model.Shipped == true)
            {
                <dd class="col-sm-9">Shipped!</dd>
            }
            else
            {
                <dd class="col-sm-9">Processing...</dd>
            }

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Address 1</dt>
            <dd class="col-sm-9">@Model.Line1</dd>

            <dt class="col-sm-3">Address 2</dt>
            <dd class="col-sm-9">@Model.Line2</dd>

            <dt class="col-sm-3">Address 3</dt>
            <dd class="col-sm-9">@Model.Line3</dd>

            <dt class="col-sm-3">City</dt>
            <dd class="col-sm-9">@Model.City</dd>

            <dt class="col-sm-3">State</dt>
            <dd class="col-sm-9">@Model.State</dd>

            <dt class="col-sm-3">Zip</dt>
            <dd class="col-sm-9">@Model.Zip</dd>

            <dt class="col-sm-3">Country</dt>
            <dd class="col-sm-9">@Model.Country</dd>
        </dl>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header">
        <h4>Items</h4>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.Lines)
                {
                    <tr>
                        <td>@line.Product.Name</td>
                        <td>@line.Product.Price.ToString("c")</td>
                        <td>@line.Quantity</td>
                        <td>@(line.Product.Price * line.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>