@model Product
@{
    ViewBag.Title = "Edit Product";
    Layout = "_AdminLayout";
}
<form asp-action="Edit" method="post">
    @*CATEGORY*@
    <div class="form-group">
        <label asp-for="Category"></label>
        <div><span asp-validation-for="Category" class="text-danger"></span></div>
        <input asp-for="Category" class="form-control" />
    </div>
    @*NAME + ID*@
    <input type="hidden" asp-for="ProductID" /> <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    @*BRAND*@
    <div class="form-group">
        <label asp-for="Brand"></label>
        <div><span asp-validation-for="Brand" class="text-danger"></span></div>
        <input asp-for="Brand" class="form-control" />
    </div>
    @*DESCRIPTION*@
    <div class="form-group">
        <label asp-for="Description"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    @*IMAGE URL*@
    <div class="form-group">
        <label asp-for="ImageURL"></label>
        <div><span asp-validation-for="ImageURL" class="text-danger"></span></div>
        <textarea asp-for="ImageURL" class="form-control"></textarea>
    </div>
    @*ATTRIBUTE NAME*@
    <div class="form-group">
        <label asp-for="AttributeName"></label>
        <div><span asp-validation-for="AttributeName" class="text-danger"></span></div>
        <textarea asp-for="AttributeName" class="form-control"></textarea>
    </div>
    @*ATTRIBUTE NAME VALUE*@
    <div class="form-group">
        <label asp-for="AttributeNameValue"></label>
        <div><span asp-validation-for="AttributeNameValue" class="text-danger"></span></div>
        <textarea asp-for="AttributeNameValue" class="form-control"></textarea>
    </div>
    @*PRICE*@
    <div class="form-group">
        <label asp-for="Price"></label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>
    @*WEIGHT*@
    <div class="form-group">
        <label asp-for="Weight"></label>
        <div><span asp-validation-for="Weight" class="text-danger"></span></div>
        <input asp-for="Weight" class="form-control" />
    </div>
    @*LENGTH*@
    <div class="form-group">
        <label asp-for="Length"></label>
        <div><span asp-validation-for="Length" class="text-danger"></span></div>
        <input asp-for="Length" class="form-control" />
    </div>
    @*WIDTH*@
    <div class="form-group">
        <label asp-for="Width"></label>
        <div><span asp-validation-for="Width" class="text-danger"></span></div>
        <input asp-for="Width" class="form-control" />
    </div>
    @*HEIGHT*@
    <div class="form-group">
        <label asp-for="Height"></label>
        <div><span asp-validation-for="Height" class="text-danger"></span></div>
        <input asp-for="Height" class="form-control" />
    </div>
    @*AMOUNT*@
    <div class="form-group">
        <label asp-for="Amount"></label>
        <div><span asp-validation-for="Amount" class="text-danger"></span></div>
        <input asp-for="Amount" class="form-control" />
    </div>
    @*SUBMIT*@
    <div class="row" style="padding-top: 10px;">
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
    
</form>